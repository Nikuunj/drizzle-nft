{
  "name": "nft-drizzle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:push": "drizzle-kit push:mysql --config=drizzle.config.ts",
    "db:generate": "drizzle-kit generate",
